<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <File name = "IncRef" fileName="logs/IncorrectStations.log">
            <PatternLayout pattern="%d{DATE} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name = "SeaRef" fileName="logs/SearchStations.log">
            <PatternLayout pattern="%d{DATE} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name = "ExRef" fileName="logs/Exceptions.log">
            <PatternLayout pattern="%d{DATE} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>

    <loggers>
        <Logger name = "IncStations">
            <AppenderRef ref = "IncRef"/>
        </Logger>
        <Logger name = "SearchStations">
            <AppenderRef ref = "SeaRef"/>
        </Logger>
        <Logger name = "Exceptions">
            <AppenderRef ref = "ExRef"/>
        </Logger>
        <Root level = "info">
        </Root>
    </loggers>
</configuration>